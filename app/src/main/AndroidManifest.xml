<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/bluearchive"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlogApp"
        tools:targetApi="31">
        <activity
            android:name=".view.activity.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.WebsocketTestActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.WebsocketActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.CommentBottomActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.BlogReleaseActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.MarkdownEditorActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activity.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.MarkdownReadActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>